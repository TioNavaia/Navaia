<p id="notice"><%= notice %></p>

<h1>Registrers</h1>

<table>
  <thead>
    <tr>
      <th>Registration</th>
      <th>Name</th>
      <th>Course</th>
      <th>Module</th>
      <th>Date of registration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registrers.each do |registrer| %>
      <tr>
        <td><%= registrer.registration %></td>
        <td><%= registrer.name %></td>
        <td><%= registrer.course %></td>
        <td><%= registrer.module %></td>
        <td><%= registrer.date_of_registration %></td>
        <td><%= link_to 'Show', registrer %></td>
        <td><%= link_to 'Edit', edit_registrer_path(registrer) %></td>
        <td><%= link_to 'Destroy', registrer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Registrer', new_registrer_path %>
